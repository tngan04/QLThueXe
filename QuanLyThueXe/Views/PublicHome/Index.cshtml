                                    <span class="icon-search2"></span>
                                </div>
                            </a>*@
                        <a href="/PublicCar/DetailCar/@item.vehicle_id"> <img style="width: 100%;height:300px; object-fit: cover;" class="img img-2 d-flex justify-content-center align-items-center" src="/Content/images/@item.image"></a>
                        <div class="text p-3">
                            <div class="d-flex">
                                <div class="one">
                                    <h3><a href="/PublicCar/DetailCar/@item.vehicle_id">@item.name</a></h3>
                                    <p class="rate">
                                        <i class="icon-star"></i>
                                        <i class="icon-star"></i>
                                        <i class="icon-star"></i>
                                        <i class="icon-star"></i>
                                        <i class="icon-star"></i>
                                        @*<i class="icon-star-o"></i>*@

                                    </p>
                                </div>
                                @*<div class="two" style="margin-right : 100px" >
                                        <span class="price" style="margin-right : 100px">@item.price VNĐ</span>
                                    </div>*@
                            </div>
                            @*   <p>Far far away, behind the word mountains, far from the countries</p>*@
