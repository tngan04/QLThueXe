
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="hero-wrap js-fullheight" style="background-image: url('https://wallpaperaccess.com/full/840326.jpg'); height: 60px;">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
            <div class="col-md-9 ftco-animate" data-scrollax="properties: { translateY: '70%' }">
                <h5 class="discount-title" style="font-size: 24px; color: white; font-weight: bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); text-align: center;">Chương Trình Giảm Giá Ưu Đãi</h5>
                <h5 class="discount-amount" style="font-size: 48px; color: red; font-weight: bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); text-align: center; margin: 10px 0;">30%</h5>
                <h1 class="welcome-message" style="font-size: 36px; color: white; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); text-align: center;"><strong>Chào mừng bạn đến với</strong></h1>
                <p class="service-description" style="font-size: 20px; color: white; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7); text-align: center;">Dịch vụ cho thuê xe của chúng tôi</p>
                <div class="block-17 my-4">
                    <form action="/PublicCar/Search" method="post" class="d-block d-flex">
                        <div class="fields d-block d-flex">
                            <div class="textfield-search one-third">
                                <input type="text" name="name" class="form-control" placeholder="Ví dụ: Xe ab">
                            </div>
                            <div class="select-wrap one-third">
                                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                <select name="idType" id="" class="form-control" placeholder="Tên xe">
                                    <option value="">Loại xe</option>
                                    <option value="1">Xe ô tô</option>
                                    <option value="2">Xe máy</option>
                                </select>
                            </div>
                        </div>
                        <input type="submit" class="search-submit btn btn-primary" value="Tìm kiếm">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-start mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate">
                <h2 class="mb-4">Xe ô tô trong hệ thống</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in ViewBag.ListOto)
            {
                <div class="col-md-4">
                    <div class="destination">
